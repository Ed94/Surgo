root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false
max_line_length = 150

# MSBuild
[*.{csproj,proj,projitems,shproj,fsproj,target,props}]
indent_style = space
indent_size = 2

# XML config files
[*.{config,nuspec,resx,natvis}]
indent_style = space
indent_size = 2

[*.{h, c, hpp, cpp}]
indent_style = tab
indent_size  = 4

[*.{ps1, psm1}]
indent_style = tab
indent_size  = 4

[*.md]
indent_style = space
indent_size  = 4


[*.{natvis, natstepfilter}]
indent_style = tab
indent_size  = 4

# Settings for Verse source files
[*.{verse,versetest}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = off